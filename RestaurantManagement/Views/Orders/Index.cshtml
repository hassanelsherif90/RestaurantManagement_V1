@model IEnumerable<OrderViewModel>

<div class="container">
    <h2>الطلبات</h2>
    <a href="/Orders/Create" class="btn btn-primary">إضافة طلب جديد</a>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>رقم الطلب</th>
                    <th>الطاولة</th>
                    <th>الوقت</th>
                    <th>المبلغ</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.OrderId</td>
                        <td>@order.TableNumber</td>
                        <td>@order.OrderTime.ToString("HH:mm")</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <span class="badge bg-@order.StatusColor">@order.Status</span>
                        </td>
                        <td>
                            <a href="/Orders/Details/@order.OrderId"  class="btn btn-info btn-sm">عرض</a>
                            <a href="/Order/Edit/@order.OrderId" class="btn btn-warning btn-sm">تعديل</a>
                            <a href="/Order/Delete/@order.OrderId" class="btn btn-danger btn-sm">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
