@model IEnumerable<UserViewModel>

<div class="container">
    <h2>المستخدمون</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">إضافة مستخدم جديد</a>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>اسم المستخدم</th>
                    <th>البريد الإلكتروني</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-warning btn-sm">تعديل</a>
                            <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger btn-sm">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
